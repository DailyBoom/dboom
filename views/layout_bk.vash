      <div id="login_modal" class="modal">
        <div class="modal-content">
          <div class="row">
            <div class="col s12">
              <ul class="tabs">
                <li class="tab col s6"><a href="#login">Đăng nhập</a></li>
                <li class="tab col s6"><a href="#signup">Đăng ký</a></li>
