<html>
	<head>
		<title>Yppuna</title>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
		<link href='https://fonts.googleapis.com/css?family=Hanna:400,300,200,100' rel='stylesheet' type='text/css'>
		<style>
			@@font-face {
				font-family: 'SVN-Karla';
				src: url('http://yppuna.vn/fonts/SVN-Karla_Regular.otf'); /* IE9 Compat Modes */
				src: url('http://yppuna.vn/fonts/SVN-Karla_Regular.otf') format('truetype'); /* IE9 Compat Modes */
			}

			h1,h2,h3,h4,h5,h6 {
				font-family: 'SVN-Karla';
				margin: 10px;
			}
			body {
				font-family: SVN-Karla;
				font-size: 14px;
				font-weight: normal;
				font-style: normal;
				font-stretch: normal;
				color: #4a8dcc;
			}
			a {
				color: #fea3a3 !important;
			}
			th { padding: 0px 20px; }
			td { padding: 10px 20px; }
			td.db-mail-body { padding: 30px 20px; }
			.db-mail {
				border: 1px solid #546e7a;
				border-collapse: collapse;
				width: 100%;
			}
		  .db-logo-img {
				height: 100px;
				float: left;
			}
		  .db-nav {
		    height: 100px;
		    background: -webkit-linear-gradient(#37474f, #455a64, #37474f);
		    background: -o-linear-gradient(#37474f, #455a64, #37474f);
		    background: -moz-linear-gradient(#37474f, #455a64, #37474f);
		    background: linear-gradient(#37474f, #455a64, #37474f);
		  }
		</style>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
	</head>
	<body>
		<table class="db-mail">
			<thead class="">
				<tr>
					<th><img class="db-logo-img" src="http://www.yppuna.vn/images/logo.png" alt="Yppuna logo" /></th>
				</tr>
			</thead>
			<tbody class="">
				<tr>
					<td class="db-mail-body">
						<h1>@model.i18n.__('email.signup.1', model.username)</h1>
						<h3>@model.i18n.__('email.signup.2')</h3>
					</td>
				</tr>
				<tr>
					<td>
						<h3>@model.i18n.__('email.signup.3')</h3>
					</td>
				</tr>
				<tr class="">
					<td>
						<h4>
							@html.raw(model.i18n.__('email.contact'))
							<br><br>
							@html.raw(model.i18n.__('email.goto'))
						</h4>
					</td>
				</tr>
			</tbody>
		</table>
	</body>
</html>
